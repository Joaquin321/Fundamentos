#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main()

{
	float a,b,c,A,s;

	cout<<"Introduzca a: ";
	cin>>a;
	cout<<"Introduzca b: ";
	cin>>b;
	cout<<"Introduzca c: ";
	cin>>c;
	s=(a+b+c)/2;
	A=sqrt((s*(s-a)*(s-b)*(s-c)));
	cout<<"El area es: "<<A;

	getch();
	return 0;

}
