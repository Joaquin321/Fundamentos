//Librerias 
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main() {
//Declarar variables
	float base, altura, Area; // todas las instrucciones terminan con punto y coma;
	cout<<"Ingresar la base: "<<endl;
	cin>>base;
	cout<<"Ingresar la altura: "<<endl; 
	cin>>altura;
	Area=base*altura/2;
	cout<<"El area es: "<<Area;
	getch();

}
